<div class="form-area col-sm-6" ng-controller="CreateCtrl" ng-hide='status_created'>
  <form name='form' ng-submit="submit();" class="form-horizontal">
    <div class="field form-group">
      <label for="" class="control-label">What did you do yesterday ?</label>
      <textarea name="yestarday_plan" id="" rows="5" value="" class="form-control" ng-model="status.yesterday_plan"></textarea>
    </div>
    <div class="field form-group">
      <label for="" class="control-label">What is your plan for today ?</label>
      <textarea name="today_plan" id="" rows="5" value="" class="form-control" ng-model="status.today_plan"></textarea>
                 <span class='help-block'
                       ng-show="form.today_plan.$invalid && form.today_plan.$dirty">
                      {{errorMessage('today_plan')}}
                </span>
    </div>
    <div class="field form-group">
      <label for="" class="control-label">What is your plan for tomorrow ?</label>
      <textarea name="tomorrow_plan" id="" rows="5" value="" class="form-control" ng-model="status.tomorrow_plan"></textarea>
    </div>
    <div class="form-group">
      <% if @status && @status.oid %>
          <button type="submit" class="btn btn-default">Update</button>
      <% else %>
          <button type="submit" class="btn btn-default">Create</button>
      <% end%>
    </div>
  </form>
</div>