<%=form_tag '/members', {role: 'form', name: 'form'} do %>
	<div class='form-group'>
		<label for='member-name' class="control-label">Full Name:</label>
		<%=text_field_tag "name", '', class: 'form-control', id: 'member-name', "ng-model" => 'member.name'%>
        <span class='help-block' ng-show="form.name.$invalid && form.name.$dirty">
            {{errorMessage('name')}}
        </span>
	</div>
	<div class='form-group'>
		<label for='member-email' class='control-label'>Email:</label>
		<%=text_field_tag 'email', '', class: 'form-control', id: 'member-email', "ng-model" => 'member.email'%>
        <span class='help-block' ng-show="form.email.$invalid && form.email.$dirty">
              {{errorMessage('email')}}
        </span>
	</div>
<% end %>        