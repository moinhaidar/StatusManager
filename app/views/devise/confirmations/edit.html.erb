<%=display_flash %>
<div class='top-label'>
  <strong style="color:red;">Enter your password to complete the confirmation process</strong>
</div>
<%= form_for(resource, as: resource_name, url: update_member_confirmation_path, html: { class: 'form-horizontal', method: :put }) do |f| %>
    <div class="field form-group">
        <%#= devise_error_messages! %>
      <%= f.hidden_field :confirmation_token %>
    </div>

    <div class="field form-group">
      <%= f.label :email, :class => 'control-label col-sm-2' %>
      <div class="col-sm-6">
        <%= f.email_field :email, readonly: true, class: 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :password, :class => 'control-label col-sm-2' %>
      <div class="col-sm-6">
        <%= f.password_field :password, class: 'form-control' %>
        <span class="help-block"><%=f.object.errors[:password][0] unless f.object.errors.empty? %></span>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label :password_confirmation, :class => 'control-label col-sm-2' %>
      <div class="col-sm-6">
        <%= f.password_field :password_confirmation,  class: 'form-control' %>
        <span class="help-block"><%=f.object.errors[:password_confirmation][0] unless f.object.errors.empty?%></span>
      </div>
    </div>


    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Let me manage!</button>
      </div>
    </div>
<% end %>

<%#= render "devise/shared/links" %>
