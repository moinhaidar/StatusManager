<div class="template">
	<div class='col-sm-12'>
		<h2>Settings</h2>
	</div>
	<%=form_for @setting, url: settings_path,  html:{role: 'form', class: 'form-horizontal' } do |form|%>
		<div class='form-group'>
			<label class='control-label'>Minutes</label>
			<%=select_minute(@setting.alarm_minutes, {field_name: 'alarm[alarm_minutes]'}, {class: 'form-control'})%>
		</div>
		<div class='form-group'>
			<label class='control-label'>Hours</label>
			<%=select_hour(@setting.alarm_hours, {field_name: 'alarm[alarm_hours]'}, {class: 'form-control'})%>
		</div>
		<div class='form-group'>
			<label class='contro-label'>Timezone</label>
			<%=time_zone_select( "alarm", 
								 "timezone", 
								  ActiveSupport::TimeZone.all.sort, 
								  {model: ActiveSupport::TimeZone, 
								  prompt: 'Select'}, class: 'form-control'
								  )
			%>		
		</div>
	<% end %>
</div>